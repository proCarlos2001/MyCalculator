<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyCalculator" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/gray_black</item>
        <item name="colorPrimaryVariant">@color/gray_black</item>
        <item name="colorOnPrimary">@color/black</item>


        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/gray_black</item>
    </style>

    <style name="backgroundColor">
        <item name="android:background">@color/black</item>
    </style>

    <style name="workingStyle">
        <item name="android:lines">4</item>
        <item name="android:maxLines">4</item>
        <item name="android:text"></item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="swtichStyle">
        <item name="android:layout_margin">0dp</item>
        <item name="android:thumbTint">@color/green</item>
        <item name="android:trackTint">@color/green</item>
    </style>

    <style name="resultsStyle">
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:text"></item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="buttonRow">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="buttonNumber">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">23sp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:onClick">numberAction</item>
    </style>

    <style name="buttonOperator">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:onClick">operationAction</item>
    </style>

    <style name="deleteOne">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:onClick">numberAction</item>
    </style>

</resources>