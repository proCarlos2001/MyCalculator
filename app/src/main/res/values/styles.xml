<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="backgroundColor">
        <item name="android:background">@color/white</item>
    </style>

    <style name="workingStyle">
        <item name="android:lines">4</item>
        <item name="android:maxLines">4</item>
        <item name="android:text"></item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="swtichStyle">
        <item name="android:layout_margin">0dp</item>
        <item name="android:thumbTint">@color/blue</item>
        <item name="android:trackTint">@color/blue</item>
    </style>

    <style name="resultsStyle">
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:text"></item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="buttonRow">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="buttonNumber">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">23sp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:onClick">numberAction</item>
    </style>

    <style name="buttonOperator">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:onClick">operationAction</item>
    </style>

    <style name="deleteOne">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">23sp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:onClick">numberAction</item>
    </style>

</resources>